/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "resolveJsonModule": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "dist", "server.ts", "server.ngtypecheck.ts", "server/**/*.ts"],

  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
